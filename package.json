{
    "name": "scorebloq",
    "version": "1.0.0",
    "description": "Small private cross-platform Beat Saber leaderboard",
    "author": "Raphaël Thériault <raphael_theriault@outlook.com>",
    "main": "src/index.ts",
    "license": "MIT",
    "homepage": "https://github.com/raftario/scorebloq-server",
    "repository": "raftario/scorebloq-server",
    "scripts": {
        "start": "ts-node src/index.ts",
        "start:dev": "ts-node-dev src/index.ts",
        "start:prod": "ts-node --transpile-only src/index.ts",
        "build": "tsc",
        "lint": "eslint --fix **/*.{ts,js} && prettier --write **/*.{json,md,yml}",
        "lint:check": "eslint **/*.{ts,js} && prettier --check **/*.{json,md,yml}"
    },
    "dependencies": {
        "@koa/router": "^8.0.6",
        "@types/koa": "^2.11.0",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa__router": "^8.0.2",
        "@types/node": "^12.12.25",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.11.0",
        "koa-bodyparser": "^4.2.1",
        "koa-jwt": "^3.6.0",
        "pg": "^7.17.1",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^8.6.2",
        "typeorm": "^0.2.22",
        "typescript": "^3.7.5"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.0",
        "lint-staged": "^10.0.2",
        "prettier": "^1.18.2",
        "ts-node-dev": "^1.0.0-pre.43"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "git add"
        ],
        "*.{json,md,yml}": [
            "prettier --write",
            "git add"
        ]
    }
}
